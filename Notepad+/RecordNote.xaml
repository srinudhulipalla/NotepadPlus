<UserControl x:Class="NotepadPlus.RecordNote"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot">
        <Button Name="btnStart"  Content="Start" Height="72" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="160" Click="btnStart_Click" />
        <Button Name="btnStop" Content="Stop" Height="72" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top" Width="160" Click="btnStop_Click" />
        <Button Name="btnPlay" Content="Play" Height="72" HorizontalAlignment="Left" Margin="28,170,0,0" VerticalAlignment="Top" Width="160" Click="btnPlay_Click" />
    </Grid>
</UserControl>
